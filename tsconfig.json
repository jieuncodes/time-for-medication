{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "incremental": true,
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowImportingTsExtensions": true
  },
  "include": [
    "next-env.d.mts",
    ".next/types/**/*.ts",
    "**/*.mts",
    "**/*.tsx",
    "components/atoms/button/icon-button/RoundButton.ts"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "esm": true,
    "require": ["tsconfig-paths/register"]
  }
}
